<!-- Goals Page  -->
<div id="goals" class="page-view <%= currentPage === 'goals' ? 'active' : '' %> p-8">
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h2 class="serif text-4xl font-semibold text-[#2C2C2C] mb-2">
          Saving Goals
        </h2>
        <p class="text-[#2C2C2C]/60">
          Track your progress towards financial milestones
        </p>
      </div>
      <button class="btn-primary px-6 py-3 rounded-xl font-medium">
        <i class="fas fa-plus mr-2"></i>Create New Goal
      </button>
    </div>
  </div>

  <!-- Goals Overview -->
  <div class="grid grid-cols-3 gap-6 mb-8">
    <div class="card rounded-2xl p-6">
      <div class="flex items-center gap-4">
        <div
          class="w-12 h-12 rounded-xl bg-[#4A6B5C]/10 flex items-center justify-center"
        >
          <i class="fas fa-bullseye text-[#4A6B5C] text-lg"></i>
        </div>
        <div>
          <p class="text-sm text-[#2C2C2C]/60 mb-1">Active Goals</p>
          <p class="serif text-2xl font-semibold text-[#2C2C2C]">3</p>
        </div>
      </div>
    </div>
    <div class="card rounded-2xl p-6">
      <div class="flex items-center gap-4">
        <div
          class="w-12 h-12 rounded-xl bg-[#C9A86A]/10 flex items-center justify-center"
        >
          <i class="fas fa-piggy-bank text-[#C9A86A] text-lg"></i>
        </div>
        <div>
          <p class="text-sm text-[#2C2C2C]/60 mb-1">Total Saved</p>
          <p class="serif text-2xl font-semibold text-[#2C2C2C]">$32,913</p>
        </div>
      </div>
    </div>
    <div class="card rounded-2xl p-6">
      <div class="flex items-center gap-4">
        <div
          class="w-12 h-12 rounded-xl bg-[#4A6B5C]/10 flex items-center justify-center"
        >
          <i class="fas fa-trophy text-[#4A6B5C] text-lg"></i>
        </div>
        <div>
          <p class="text-sm text-[#2C2C2C]/60 mb-1">Completed</p>
          <p class="serif text-2xl font-semibold text-[#2C2C2C]">1</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Active Goals -->
  <div class="mb-8">
    <h3 class="serif text-2xl font-semibold text-[#2C2C2C] mb-6">
      Active Goals
    </h3>
    <div class="space-y-6">
      <div class="card rounded-2xl p-8">
        <div class="flex items-start justify-between mb-6">
          <div class="flex items-center gap-4">
            <div
              class="w-16 h-16 rounded-2xl bg-gradient-to-br from-[#4A6B5C] to-[#3A5A4C] flex items-center justify-center"
            >
              <i class="fas fa-laptop text-white text-2xl"></i>
            </div>
            <div>
              <h4 class="serif text-2xl font-semibold text-[#2C2C2C] mb-1">
                MacBook Pro
              </h4>
              <p class="text-sm text-[#2C2C2C]/60">Target: December 2024</p>
            </div>
          </div>
          <div class="text-right">
            <p class="serif text-3xl font-semibold text-[#4A6B5C] mb-1">
              $1,650
            </p>
            <p class="text-sm text-[#2C2C2C]/60">of $1,650</p>
          </div>
        </div>
        <div class="mb-4">
          <div class="w-full h-3 bg-black/5 rounded-full overflow-hidden">
            <div
              class="progress-bar h-full rounded-full"
              style="width: 100%"
            ></div>
          </div>
        </div>
        <div class="flex items-center justify-between">
          <span
            class="stat-badge px-3 py-1.5 rounded-lg text-sm font-medium text-[#4A6B5C]"
          >
            <i class="fas fa-check-circle mr-1"></i>Goal Completed!
          </span>
          <button
            class="text-sm text-[#4A6B5C] hover:text-[#3A5A4C] font-medium"
          >
            View Details <i class="fas fa-arrow-right text-xs ml-1"></i>
          </button>
        </div>
      </div>

      <div class="card rounded-2xl p-8">
        <div class="flex items-start justify-between mb-6">
          <div class="flex items-center gap-4">
            <div
              class="w-16 h-16 rounded-2xl bg-gradient-to-br from-[#C9A86A] to-[#B89860] flex items-center justify-center"
            >
              <i class="fas fa-car text-white text-2xl"></i>
            </div>
            <div>
              <h4 class="serif text-2xl font-semibold text-[#2C2C2C] mb-1">
                New Car
              </h4>
              <p class="text-sm text-[#2C2C2C]/60">Target: June 2025</p>
            </div>
          </div>
          <div class="text-right">
            <p class="serif text-3xl font-semibold text-[#4A6B5C] mb-1">
              $27,000
            </p>
            <p class="text-sm text-[#2C2C2C]/60">of $60,000</p>
          </div>
        </div>
        <div class="mb-4">
          <div class="w-full h-3 bg-black/5 rounded-full overflow-hidden">
            <div
              class="progress-bar h-full rounded-full"
              style="width: 45%"
            ></div>
          </div>
        </div>
        <div class="flex items-center justify-between">
          <span
            class="stat-badge px-3 py-1.5 rounded-lg text-sm font-medium text-[#4A6B5C]"
          >
            45% Complete • $33,000 remaining
          </span>
          <button
            class="text-sm text-[#4A6B5C] hover:text-[#3A5A4C] font-medium"
          >
            Add Funds <i class="fas fa-plus text-xs ml-1"></i>
          </button>
        </div>
      </div>

      <div class="card rounded-2xl p-8">
        <div class="flex items-start justify-between mb-6">
          <div class="flex items-center gap-4">
            <div
              class="w-16 h-16 rounded-2xl bg-gradient-to-br from-[#4A6B5C] to-[#3A5A4C] flex items-center justify-center"
            >
              <i class="fas fa-home text-white text-2xl"></i>
            </div>
            <div>
              <h4 class="serif text-2xl font-semibold text-[#2C2C2C] mb-1">
                New House
              </h4>
              <p class="text-sm text-[#2C2C2C]/60">Target: December 2026</p>
            </div>
          </div>
          <div class="text-right">
            <p class="serif text-3xl font-semibold text-[#4A6B5C] mb-1">
              $18,000
            </p>
            <p class="text-sm text-[#2C2C2C]/60">of $150,000</p>
          </div>
        </div>
        <div class="mb-4">
          <div class="w-full h-3 bg-black/5 rounded-full overflow-hidden">
            <div
              class="progress-bar h-full rounded-full"
              style="width: 12%"
            ></div>
          </div>
        </div>
        <div class="flex items-center justify-between">
          <span
            class="stat-badge px-3 py-1.5 rounded-lg text-sm font-medium text-[#4A6B5C]"
          >
            12% Complete • $132,000 remaining
          </span>
          <button
            class="text-sm text-[#4A6B5C] hover:text-[#3A5A4C] font-medium"
          >
            Add Funds <i class="fas fa-plus text-xs ml-1"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
