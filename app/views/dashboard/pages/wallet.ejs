<!-- Wallet Page  -->
<div id="wallet" class="page-view <%= currentPage === 'wallet' ? 'active' : '' %> p-8">
  <div class="mb-8">
    <h2 class="serif text-4xl font-semibold text-[#2C2C2C] mb-2">Wallet</h2>
    <p class="text-[#2C2C2C]/60">Manage your payment methods and accounts</p>
  </div>

  <!-- Quick Actions -->
  <div class="grid grid-cols-4 gap-4 mb-8">
    <button class="card rounded-2xl p-6 hover:scale-105 transition-transform">
      <div
        class="w-12 h-12 rounded-xl bg-[#4A6B5C]/10 flex items-center justify-center mb-4 mx-auto"
      >
        <i class="fas fa-plus text-[#4A6B5C] text-lg"></i>
      </div>
      <p class="text-sm font-medium text-[#2C2C2C] text-center">Add Card</p>
    </button>
    <button class="card rounded-2xl p-6 hover:scale-105 transition-transform">
      <div
        class="w-12 h-12 rounded-xl bg-[#4A6B5C]/10 flex items-center justify-center mb-4 mx-auto"
      >
        <i class="fas fa-exchange-alt text-[#4A6B5C] text-lg"></i>
      </div>
      <p class="text-sm font-medium text-[#2C2C2C] text-center">Transfer</p>
    </button>
    <button class="card rounded-2xl p-6 hover:scale-105 transition-transform">
      <div
        class="w-12 h-12 rounded-xl bg-[#4A6B5C]/10 flex items-center justify-center mb-4 mx-auto"
      >
        <i class="fas fa-download text-[#4A6B5C] text-lg"></i>
      </div>
      <p class="text-sm font-medium text-[#2C2C2C] text-center">Deposit</p>
    </button>
    <button class="card rounded-2xl p-6 hover:scale-105 transition-transform">
      <div
        class="w-12 h-12 rounded-xl bg-[#4A6B5C]/10 flex items-center justify-center mb-4 mx-auto"
      >
        <i class="fas fa-upload text-[#4A6B5C] text-lg"></i>
      </div>
      <p class="text-sm font-medium text-[#2C2C2C] text-center">Withdraw</p>
    </button>
  </div>

  <!-- Cards -->
  <div class="mb-8">
    <h3 class="serif text-2xl font-semibold text-[#2C2C2C] mb-6">My Cards</h3>
    <div class="grid grid-cols-2 gap-6">
      <div class="wallet-card rounded-2xl p-8 relative">
        <div class="flex items-start justify-between mb-12">
          <div>
            <p class="text-white/60 text-sm mb-2">Current Balance</p>
            <p class="serif text-3xl font-semibold text-white">$12,450.00</p>
          </div>
          <i class="fas fa-credit-card text-white/40 text-2xl"></i>
        </div>
        <div class="flex items-end justify-between">
          <div>
            <p class="text-white/60 text-xs mb-1">Card Number</p>
            <p class="text-white font-medium tracking-wider">
              •••• •••• •••• 3284
            </p>
          </div>
          <div class="text-right">
            <p class="text-white/60 text-xs mb-1">Expires</p>
            <p class="text-white font-medium">12/25</p>
          </div>
        </div>
        <div class="absolute bottom-8 right-8">
          <div class="flex items-center gap-2">
            <div class="w-8 h-8 rounded-full bg-white/20"></div>
            <div class="w-8 h-8 rounded-full bg-white/20 -ml-4"></div>
          </div>
        </div>
      </div>
      <div
        class="wallet-card rounded-2xl p-8 relative"
        style="background: linear-gradient(135deg, #4a6b5c 0%, #3a5a4c 100%)"
      >
        <div class="flex items-start justify-between mb-12">
          <div>
            <p class="text-white/60 text-sm mb-2">Current Balance</p>
            <p class="serif text-3xl font-semibold text-white">$3,250.00</p>
          </div>
          <i class="fas fa-credit-card text-white/40 text-2xl"></i>
        </div>
        <div class="flex items-end justify-between">
          <div>
            <p class="text-white/60 text-xs mb-1">Card Number</p>
            <p class="text-white font-medium tracking-wider">
              •••• •••• •••• 2354
            </p>
          </div>
          <div class="text-right">
            <p class="text-white/60 text-xs mb-1">Expires</p>
            <p class="text-white font-medium">08/26</p>
          </div>
        </div>
        <div class="absolute bottom-8 right-8">
          <div class="flex items-center gap-2">
            <div class="w-8 h-8 rounded-full bg-white/20"></div>
            <div class="w-8 h-8 rounded-full bg-white/20 -ml-4"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Connected Accounts -->
  <div>
    <h3 class="serif text-2xl font-semibold text-[#2C2C2C] mb-6">
      Connected Accounts
    </h3>
    <div class="grid grid-cols-2 gap-6">
      <div class="card rounded-2xl p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center gap-4">
            <div
              class="w-12 h-12 rounded-xl bg-blue-50 flex items-center justify-center"
            >
              <i class="fas fa-university text-blue-600 text-lg"></i>
            </div>
            <div>
              <p class="font-semibold text-[#2C2C2C]">Chase Bank</p>
              <p class="text-sm text-[#2C2C2C]/40">••••5678</p>
            </div>
          </div>
          <div class="text-right">
            <p class="font-semibold text-[#2C2C2C]">$8,450.00</p>
            <p class="text-xs text-[#4A6B5C]">Connected</p>
          </div>
        </div>
      </div>
      <div class="card rounded-2xl p-6">
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center gap-4">
            <div
              class="w-12 h-12 rounded-xl bg-purple-50 flex items-center justify-center"
            >
              <i class="fab fa-paypal text-purple-600 text-lg"></i>
            </div>
            <div>
              <p class="font-semibold text-[#2C2C2C]">PayPal</p>
              <p class="text-sm text-[#2C2C2C]/40">zakaria@email.com</p>
            </div>
          </div>
          <div class="text-right">
            <p class="font-semibold text-[#2C2C2C]">$1,250.00</p>
            <p class="text-xs text-[#4A6B5C]">Connected</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
